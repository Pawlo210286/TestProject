<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple">

    <ImageView
        android:id="@+id/navigate_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/middle_margin"
        android:layout_marginTop="@dimen/middle_margin"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTransactionTitle"
        style="@style/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/big_margin"
        android:text="@string/add_new_transaction"
        app:layout_constraintBottom_toTopOf="@+id/tlTransactionChooseOption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvTransactionChooseOption"
        style="@style/simpleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_option"
        app:layout_constraintBottom_toBottomOf="@+id/tlTransactionChooseOption"
        app:layout_constraintEnd_toEndOf="@+id/tvTransactionSum"
        app:layout_constraintStart_toStartOf="@+id/tvTransactionSum"
        app:layout_constraintTop_toTopOf="@+id/tlTransactionChooseOption" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tlTransactionChooseOption"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/etTransactionSum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvTransactionChooseOption"
        app:layout_constraintTop_toBottomOf="@+id/tvTransactionTitle">

        <AutoCompleteTextView
            android:id="@+id/atvChooseOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvTransactionSum"
        style="@style/simpleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_the_sum"
        app:layout_constraintBottom_toBottomOf="@+id/etTransactionSum"
        app:layout_constraintEnd_toStartOf="@+id/etTransactionSum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTransactionChooseOption"
        app:layout_constraintTop_toTopOf="@+id/etTransactionSum" />

    <EditText
        android:id="@+id/etTransactionSum"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/middle_margin"
        android:background="@color/white"
        android:inputType="numberDecimal"
        android:maxWidth="150dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/bSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvTransactionSum"
        app:layout_constraintTop_toBottomOf="@+id/tlTransactionChooseOption" />

    <com.google.android.material.button.MaterialButton
        android:enabled="false"
        android:id="@+id/bSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/middle_margin"
        android:text="@string/submit"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTransactionSum" />
</androidx.constraintlayout.widget.ConstraintLayout>